                <Button Grid.Row="1" Text="Continue" x:Name="btnContinue" Margin="0" Clicked="btnContinue_Clicked"
                    IsEnabled="True" Style="{StaticResource BlueBtnStyle}"/>
            </Grid>
        </Grid>
    </ContentPage.Content>


</alert:DisplayAlertPage>