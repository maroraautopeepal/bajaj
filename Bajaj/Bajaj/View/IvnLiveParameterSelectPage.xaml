                                                    <OnIdiom x:DataType="GridLength" Tablet="35" Phone="30" Desktop="35"/>
                                                </ColumnDefinition.Width>
                                            </ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="{Binding long_name}" Style="{StaticResource labelStyleHS}"/>
