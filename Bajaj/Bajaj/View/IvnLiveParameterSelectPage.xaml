                    <ListView x:Name="tgw_List"  ItemsSource="{Binding TGW2List}" HasUnevenRows="true" 
                          SeparatorVisibility="Default" VerticalScrollBarVisibility="Never" 
                          VerticalOptions="FillAndExpand" SeparatorColor="#7D7C7C" Margin="10,0,10,0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid RowSpacing="2" Margin="0,8,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition>
                                                <ColumnDefinition.Width>
                                                    <OnIdiom x:DataType="GridLength" Tablet="35" Phone="30" Desktop="35"/>
